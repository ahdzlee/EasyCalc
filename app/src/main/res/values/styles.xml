<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonTextStyle</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ButtonTextStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="CalcButtonStyle">
        <item name="android:layout_width">@dimen/calc_button_width</item>
        <item name="android:layout_height">@dimen/calc_button_height</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

</resources>
